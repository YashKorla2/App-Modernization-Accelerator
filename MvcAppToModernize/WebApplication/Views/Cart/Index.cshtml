@model IEnumerable<Models.Cart>

@{
    ViewBag.Title = "Cart";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Cart</h2>

    @using (Html.BeginForm("Index", "Cart", FormMethod.Get))
    {
        <div class="d-flex align-items-center">
            <input type="text" class="form-control mx-2" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search products..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    }

    <div class="d-flex align-items-center">
        <p class="mx-2">
            @Html.ActionLink("Products", "Index", "Product", null, new { @class = "btn btn-primary" })
        </p>
        <p class="mx-2">
            @Html.ActionLink("Orders", "Index", "Order", null, new { @class = "btn btn-dark" })
        </p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <form id="cartForm" action="@Url.Action("Checkout", "Cart")" method="post">
        @Html.AntiForgeryToken()
        
        <div class="card shadow-sm p-3">
            <table class="table">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ProductPrice)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TotalPrice)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedItems" value="@item.ProductId" class="cart-checkbox" data-price="@item.TotalPrice" onchange="updateTotal()" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@String.Format("{0:C}", item.ProductPrice)</td>
                            <td>@String.Format("{0:C}", item.TotalPrice)</td>
                            <td>
                                @using (Html.BeginForm("Delete", "Cart", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this item from the cart?');">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <h4>Total Selected Price: <span id="totalPrice">0.00</span></h4>
            <button type="submit" class="btn btn-primary" id="checkoutButton" disabled>Checkout</button>
        </div>
    </form>
}
else
{
    <p class="text-muted">Your cart is empty.</p>
}

<script>
    function updateTotal() {
        let total = 0;
        let selectedItems = document.querySelectorAll('.cart-checkbox:checked');
        
        selectedItems.forEach(checkbox => {
            total += parseFloat(checkbox.dataset.price);
        });

        document.getElementById('totalPrice').innerText = total.toFixed(2);
        document.getElementById('checkoutButton').disabled = selectedItems.length === 0;
    }
</script>
